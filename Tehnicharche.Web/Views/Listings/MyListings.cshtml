@model IEnumerable<Tehnicharche.ViewModels.ListingIndexViewModel>

@{
    ViewData["Title"] = "My listings";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>My Listings</h2>

    <div>
        <a class="btn btn-outline-secondary me-2"
           asp-action="Index">
            Back to All
        </a>

        <a class="btn btn-success"
           asp-action="Create">
            Create Listing
        </a>
    </div>
</div>


@if (!Model.Any())
{
    <div class="alert alert-info">You have no listings yet.</div>
}
else
{
    <div class="row g-3">
        @foreach (var l in Model)
        {
            <div class="col-md-6">
                <div class="card p-3">
                    <img src="@l.ImageUrl" class="img-fluid rounded mb-2" alt="" />
                    <h5>@l.Title</h5>
                    <p class="price-tag">@l.Price BGN</p>
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-outline-success btn-sm" asp-action="Details" asp-route-id="@l.Id">View</a>
                        <a class="btn btn-link btn-sm" asp-action="Edit" asp-route-id="@l.Id">Edit</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
