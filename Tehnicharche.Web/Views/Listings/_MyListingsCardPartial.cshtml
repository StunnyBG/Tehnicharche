@model Tehnicharche.ViewModels.ListingIndexViewModel

<div class="col-12 mb-4">
    <div class="card shadow-lg">

        <div class="row g-0">
            <div class="col-md-5">
                <img src="@Model.ImageUrl"
                     class="img-fluid rounded-start w-100"
                     style="height: 100%; max-height: 400px; object-fit: cover;"
                     onerror="this.onerror=null;this.src='/images/placeholder.png';" />
            </div>

            <div class="col-md-7">
                <div class="card-body d-flex flex-column h-100">

                    <h3 class="card-title">@Model.Title</h3>

                    <hr />

                    <p class="mb-2">
                        <strong>Category:</strong> @Model.CategoryName
                    </p>

                    <p class="text-muted mb-3">
                        <strong>Location:</strong> @Model.RegionName
                        @if (!string.IsNullOrEmpty(Model.CityName))
                        {
                            <span> - @Model.CityName</span>
                        }
                    </p>

                    <div class="mt-auto">
                        <p class="fw-bold fs-4 text-dark mb-4">
                            @Model.Price €
                        </p>

                        <div class="d-flex gap-2">
                            <a asp-action="Details"
                               asp-route-id="@Model.Id"
                               class="btn btn-outline-primary w-50">
                                View
                            </a>

                            <a asp-action="Edit"
                               asp-route-id="@Model.Id"
                               class="btn btn-outline-warning w-50">
                                Edit
                            </a>

                            <a asp-action="Delete"
                               asp-route-id="@Model.Id"
                               class="btn btn-outline-danger w-50">
                                Detele
                            </a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
