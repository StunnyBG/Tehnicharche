@model IEnumerable<ListingIndexViewModel>
@using Tehnicharche.ViewModels

@{
    ViewData["Title"] = "All Listings";
}

<div class="d-flex justify-content-between mb-3">
    <h2>All Listings</h2>
    @if (User.Identity!.IsAuthenticated)
    {
        <a class="btn btn-success" asp-action="Create">Create Listing</a>
    }
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card p-3 h-100">
                <img src="@item.ImageUrl" class="img-fluid rounded mb-2" />
                <h5>@item.Title</h5>
                <p class="price-tag">@item.Price BGN</p>
                <p>@item.CategoryName</p>
                <p>@item.RegionName - @item.CityName</p>
                <a class="btn btn-outline-success btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
            </div>
        </div>
    }
</div>