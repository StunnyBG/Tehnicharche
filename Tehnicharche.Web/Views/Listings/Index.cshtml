@model IEnumerable<Tehnicharche.ViewModels.ListingIndexViewModel>
@{
    ViewData["Title"] = "Listings";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 text-brand">All Listings</h1>
    <a class="btn btn-brand" asp-action="Create">Create Listing</a>
</div>

<div class="row g-3">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card card-border-brand h-100">
                @if (!string.IsNullOrEmpty(item.ImageUrl))
                {
                    <img src="@item.ImageUrl" class="card-img-top listing-image" alt="@item.Title" />
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center listing-image">
                        <span class="text-muted">No image</span>
                    </div>
                }
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Title</h5>
                    <p class="card-text mb-1"><strong>Price:</strong> @item.Price</p>
                    <p class="card-text mb-1"><strong>Category:</strong> @item.CategoryName</p>
                    <p class="card-text text-muted small">@item.RegionName @if(!string.IsNullOrEmpty(item.CityName)){
                    <text>/ @item.CityName</text>
                }
</p>
                <div class="mt-auto d-flex gap-2">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-brand btn-sm w-100">View</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm w-100">Edit</a>
                </div>
            </div>
        </div>
    </div>
        }
</div>
