@model Tehnicharche.ViewModels.ListingDeleteViewModel
@{
    ViewData["Title"] = "Delete Listing";
    Layout = "_Layout";
}

<h2 class="text-brand">Delete Listing</h2>

<div class="card p-3 mb-3">
    <h4>@Model.Title</h4>
    <p class="text-muted">Are you sure you want to delete this listing? This action cannot be undone.</p>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>
