@model Tehnicharche.ViewModels.ListingEditViewModel
@{
    ViewData["Title"] = "Edit Listing";
    Layout = "_Layout";
}

<h2 class="text-brand">Edit Listing</h2>

<form asp-action="Edit" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="CategoryId" class="form-label">Category</label>
            <select asp-for="CategoryId" class="form-select">
                <option value="">-- choose category --</option>
                @foreach (var c in Model.Categories)
                {
                    @:<option value="@c.Id" @(c.Id == Model.CategoryId ? "selected" : "")>@c.Name</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="RegionId" class="form-label">Region</label>
            <select asp-for="RegionId" class="form-select">
                <option value="">-- choose region --</option>
                @foreach (var r in Model.Regions)
                {
                    @:<option value="@r.Id" @(r.Id == Model.RegionId ? "selected" : "")>@r.Name</option>
                }
            </select>
            <span asp-validation-for="RegionId" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="CityId" class="form-label">City (optional)</label>
        <select asp-for="CityId" class="form-select">
            <option value="">-- choose city --</option>
            @foreach (var c in Model.Cities)
            {
                    @:<option value="@c.Id" @(c.Id == Model.CityId ? "selected" : "")>@c.Name</option>
            }
        </select>
        <span asp-validation-for="CityId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-brand">Save Changes</button>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
