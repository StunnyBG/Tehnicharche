@{
    Layout = null;
    var title = ViewData["Title"] ?? "Tehnicharche";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title</title>

    <!-- Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        /* Green palette */
        :root{
            --brand-900: #064e3b;
            --brand-700: #087f5b;
            --brand-500: #16a34a;
            --brand-400: #34d399;
            --brand-200: #bbf7d0;
        }

        body {
            background-color: #f7fffa;
            color: #083344;
        }

        .navbar-brand {
            font-weight: 700;
            color: white !important;
        }

        .bg-brand {
            background-color: var(--brand-500) !important;
        }

        .btn-brand {
            background-color: var(--brand-500);
            border-color: var(--brand-700);
            color: white;
        }
        .btn-outline-brand {
            color: var(--brand-500);
            border-color: var(--brand-500);
        }
        .card-border-brand {
            border: 1px solid var(--brand-200);
        }
        .text-brand {
            color: var(--brand-700);
        }
        footer {
            background-color: var(--brand-900);
            color: #fff;
            padding: 1rem 0;
            margin-top: 2rem;
        }
        .listing-image {
            object-fit: cover;
            height: 180px;
            width: 100%;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-brand navbar-dark">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Tehnicharche</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navmenu">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Listings" asp-action="Index">Listings</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Listings" asp-action="Create">Create</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container py-4">
        @RenderBody()
    </div>

    <footer class="text-center">
        <div class="container">
            <small>© @DateTime.UtcNow.Year Tehnicharche</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
